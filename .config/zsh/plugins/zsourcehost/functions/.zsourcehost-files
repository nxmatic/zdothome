# use plugin options
emulate -L zsh
setopt local_options
setopt extended_glob warn_create_global typeset_silent \
       no_short_loops rc_quotes no_auto_pushd numeric_glob_sort

set -x

# ensure plugin context available
declare -Ax zsourcehost
: ${zsourcehost[uname]:=$(uname)}
: ${zsourcehost[hostname]:=$(hostname)}

local file=${1:-.}
local paths=${file:r}-(${(j:|:)zsourcehost}).${file:e}
local files=( ${paths[@]:t} )

reply=$files

set +x
return
