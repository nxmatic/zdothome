[advice]
	detachedHead = false
	pushNonFastForward = false
	statusHints = false
[alias]
	alias = "!_() { git config --global alias.$1 \"$2\"; }; _"
	aliases = config --get-regexp ^alias\\.
	checkup = !git log -1 && (git fetch --all 2>/dev/null || true) && git status
# Run a command with the repository root as cwd. See
# https://stackoverflow.com/questions/957928#comment9747528_957978.
	exec = "!exec "
	msg = log --format=%B -1
	root = rev-list --max-parents=0 HEAD
	setup = !git init && git commit --allow-empty -m \"Initial commit\"
	unalias = "!_() { git config --global --unset alias.$1; }; _"
[branch]
	autosetupmerge = true
[color]
	ui = auto
[color "branch"]
       current = yellow bold
       local = yellow
       plain = red white #for the dramatic effect
# remote = 
# upstream = 
[core]
	autocrlf = false
	excludesfile = ${XDG_CONFIG_HOME}/git/exclude
	pager = less -+F -X
[diff]
	mnemonicprefix = true
	renames = copies
	submodule = log

[diff "sopsdiffer"]
	textconv = sops -d

[fetch]
	# Automatically prune stale branches from the remote on every
	# fetch.
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	required = true
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[merge]
	conflictstyle = diff3
	stat = true
[protocol "hg"]
	allow = always
[push]
	default = current
[pull]
	rebase = true
	default = current
[rebase]
	autostash = true
[tag]
        sort = -v:refname
[receive]
	denyCurrentBranch = updateInstead
[rerere]
	enabled = false
[status]
	submoduleSummary = true
